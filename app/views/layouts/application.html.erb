<!DOCTYPE html>
<html>
 <head>
 <title>Gaijins☆Matter</title>
 <%= csrf_meta_tags %>

 <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
 <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 </head>

 <body>
 <nav class="navbar navbar-inverse navbar-static-top">
 <div class="container-fluid">
 <div class="navbar-header">
 <% if user_signed_in? %>
 <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
 <span class="icon-bar"></span>
 <span class="icon-bar"></span>
 <span class="icon-bar"></span>
 </button>
 <% end %>
 <a class="navbar-brand" href="/">Gaijins☆Matter</a>
 </div>
 <% if user_signed_in? %>
 <div class="collapse navbar-collapse" id="navbar-collapse">
 <ul class="nav navbar-nav">
 <li><%= link_to 'Rants', '/' %></a></li>
 </ul>
 <ul class="nav navbar-nav navbar-right">
 <li class="dropdown">
 <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Account <span class="caret"></span></a>
 <ul class="dropdown-menu">
 <li><%= link_to 'Setting', edit_user_registration_path %></li>
 <li role="separator" class="divider"></li>
 <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
 </ul>
 </li>
 </ul>
 </div>
 <% end %>
 </div>
 </nav>
 <div class="container">
 <% if notice.present? %>
 <div class="alert alert-dismissable alert-success">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <p><%= notice %></p>
 </div>
 <% end %>
 <% if alert.present? %>
 <div class="alert alert-dismissable alert-danger">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <p><%= alert %></p>
 </div>
 <% end %>
 <%= yield %>
 </div>
 </body>
</html>